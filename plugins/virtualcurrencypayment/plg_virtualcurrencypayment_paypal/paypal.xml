<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="virtualcurrencypayment" method="upgrade">
    <name>PLG_VIRTUALCURRENCYPAYMENT_PAYPAL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.2</version>
    <creationDate>29 May, 2014</creationDate>
    <description><![CDATA[
    <p><a href="http://itprism.com/free-joomla-extensions/ecommerce-gamification/virtual-currency-accounts-manager" target="_blank">Virtual Currency Payment - PayPal</a> is a plugin that enables PayPal payment.</p>
    <p><a href='http://itprism.com/help/111-virtual-currency-documentation' target='_blank'>Read documentation</a> that will help you to setup the extensions.</p>
    <p>Invest in the extension improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/e-commerce/credits-a-point-systems/24550" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>

    <files>
        <filename plugin="paypal">paypal.php</filename>
        <filename>index.html</filename>

        <folder>images</folder>
        <folder>language</folder>
    </files>

    <help url="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_HELP_URL"/>

    <config>
        <fields name="params" addfieldpath="/administrator/components/com_virtualcurrency/models/fields">
            <fieldset name="basic">
                <field name="paypal_business_name" type="text" size="80" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_MERCHANT_ID" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_MERCHANT_ID_DESC" />
                <field name="paypal_url" type="text" size="80" default="https://www.paypal.com/cgi-bin/webscr" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_PAYPAL_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_PAYPAL_URL_DESC" class="span6" />
                <field name="paypal_return_url" type="text" size="80" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_RETURN_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_RETURN_URL_DESC" class="span6" />
                <field name="paypal_cancel_url" type="text" size="80" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_CANCEL_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_CANCEL_URL_DESC" class="span6" />
                <field name="paypal_notify_url" type="text" default="index.php?option=com_virtualcurrency&amp;task=notifier.notify&amp;format=raw&amp;payment_service=PayPal" size="80" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_NOTIFY_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_NOTIFY_URL_DESC" class="span6" />
            </fieldset>

            <fieldset name="sandbox" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SANDBOX">
                <field name="paypal_sandbox" type="radio" default="1" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_ENABLE_SANDBOX" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SANDBOX_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="paypal_sandbox_business_name" size="80" type="text" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SANDBOX_MERCHANT_ID" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SANDBOX_MERCHANT_ID_DESC" />
                <field name="paypal_sandbox_url" type="text" size="80" default="https://www.sandbox.paypal.com/cgi-bin/webscr" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SANDBOX_URL" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SANDBOX_URL_DESC" class="span6" />
            </fieldset>

            <fieldset name="emails" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_NOTIFICATION_EMAILS">
                <field name="admin_mail_id" type="vcemails" default="0" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SEND_MAIL_ADMIN" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SEND_MAIL_ADMIN_DESC" class="btn-group" />
                <field name="user_mail_id" type="vcemails" default="0" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SEND_MAIL_USER" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_SEND_MAIL_USER_DESC" class="btn-group" />

                <field name="email_mode" type="list" default="html" label="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_EMAIL_MODE" description="PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_EMAIL_MODE_DESC" >
                    <option value="plain">PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_PLAIN</option>
                    <option value="html">PLG_VIRTUALCURRENCYPAYMENT_PAYPAL_HTML</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>