<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="user" method="upgrade">
    <name>PLG_USER_VIRTUALCURRENCYNEWACCOUNT</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.2</version>
    <creationDate>29 May, 2014</creationDate>
    <description><![CDATA[
    <p><a href="http://itprism.com/free-joomla-extensions/ecommerce-gamification/virtual-currency-accounts-manager" target="_blank">Virtual Currency - New Account</a> is an extension that creates accounts used for storing and managing virtual currency.</p>
    <p><a href='http://itprism.com/help/111-virtual-currency-documentation' target='_blank'>Read documentation</a> that will help you to setup the extensions.</p>
    <p>Invest in the extension improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/e-commerce/credits-a-point-systems/24550" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <files>
        <filename plugin="virtualcurrencynewaccount">virtualcurrencynewaccount.php</filename>
        <filename>index.html</filename>

        <folder>language</folder>
    </files>
    
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_virtualcurrency/models/fields">
                <field name="give_units" type="radio" default="0" label="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_GIVE_UNITS" description="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_GIVE_UNITS_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="give_units_unit" type="vccurrencies" label="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_UNIT" description="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_UNIT_DESC" />
                <field name="give_units_number" type="text" label="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_NUMBER" description="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_NUMBER_DESC" />
                <field name="give_units_integrate" type="list" default="" label="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_INTEGRATE" description="PLG_USER_VIRTUALCURRENCYNEWACCOUNT_INTEGRATE_DESC">
                    <option value="">PLG_USER_VIRTUALCURRENCYNEWACCOUNT_NONE</option>
                    <option value="gamification">PLG_USER_VIRTUALCURRENCYNEWACCOUNT_GAMIFICATION_PLATFORM</option>
                    <option value="socialcommunity">PLG_USER_VIRTUALCURRENCYNEWACCOUNT_SOCIAL_COMMUNITY</option>
                </field>
            </fieldset>
        </fields>
    </config>
    
</extension>
