<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="title" type="text"
               label="COM_VIRTUALCURRENCY_TITLE"
               description="COM_VIRTUALCURRENCY_POINTS_TITLE_DESC"
               size="40"
               filter="trim"
               required="true"/>

        <field name="code" type="text"
               label="COM_VIRTUALCURRENCY_CURRENCY_CODE"
               description="COM_VIRTUALCURRENCY_CURRENCY_CODE_DESC"
               filter="trim"
               required="true"
                />

        <field name="symbol" type="text"
               label="COM_VIRTUALCURRENCY_CURRENCY_SYMBOL"
               description="COM_VIRTUALCURRENCY_CURRENCY_SYMBOL_DESC"
               filter="trim"
                />

        <field name="published" type="radio" class="btn-group"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               filter="intval"
               default="1"
                >
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>

        <field name="id" type="text" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               readonly="true"
               default="0"
        />

    </fieldset>

    <fields name="params" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">

        <fieldset name="basic">

            <field name="amount" type="vcrealamount"
                   label="COM_VIRTUALCURRENCY_PRICE"
                   description="COM_VIRTUALCURRENCY_CURRENCY_PRICE_DESC"
                   filter="trim"
                   />

            <field name="minimum" type="text"
                   label="COM_VIRTUALCURRENCY_MINIMUM_UNITS"
                   description="COM_VIRTUALCURRENCY_MINIMUM_UNITS_DESC"
                   />
        </fieldset>

    </fields>
</form>