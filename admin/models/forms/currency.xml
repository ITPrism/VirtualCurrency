<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="title" type="text" class="inputbox" 
			label="COM_VIRTUALCURRENCY_TITLE"
			description="COM_VIRTUALCURRENCY_POINTS_TITLE_DESC"
			size="40"   
			filter="trim" 
			required="true" />

        <field name="code" type="text" class="inputbox" 
            label="COM_VIRTUALCURRENCY_CURRENCY_CODE"
            description="COM_VIRTUALCURRENCY_CURRENCY_CODE_DESC"
            filter="trim" 
            required="true"
        />
            
		<field name="published" type="list" class="inputbox" 
		    label="JSTATUS" 
            description="JFIELD_PUBLISHED_DESC" 
            size="1" 
            filter="intval" 
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
		
		<field name="id" type="text" class="readonly"
		  label="JGLOBAL_FIELD_ID_LABEL"
		  description="JGLOBAL_FIELD_ID_DESC" 
          readonly="true" 
          default="0" 
        />
            
	</fieldset>
</form>