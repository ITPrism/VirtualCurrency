<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="user_id" type="user" class="inputbox"
            label="COM_VIRTUALCURRENCY_USER" 
            required="true"
        />
            
		<field name="amount" type="text" class="inputbox" 
			size="40"  
			label="COM_VIRTUALCURRENCY_AMOUNT" 
			description="COM_VIRTUALCURRENCY_AMOUNT_DESC"
			filter="float" 
			default="0"  
		/>

        <field name="currency_id" type="vccurrencies" class="inputbox" 
            label="COM_VIRTUALCURRENCY_CURRENCY" 
            description="COM_VIRTUALCURRENCY_CURRENCY_DESC"
            filter="int" 
            required="true"
        />
        
        <field name="note" type="textarea" class="inputbox" 
            label="COM_VIRTUALCURRENCY_NOTE"
            description="COM_VIRTUALCURRENCY_NOTE_DESC"  
            filter="trim"
            cols="30" 
            rows="5"
        />
        
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" />
            
	</fieldset>
</form>