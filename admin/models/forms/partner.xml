<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="title" type="text" class="inputbox" 
			label="COM_VIRTUALCURRENCY_TITLE"
			description="COM_VIRTUALCURRENCY_BADGE_TITLE_DESC"
			size="40"   
			filter="trim" 
			required="true" 
		/>

        <field name="website" type="text" class="inputbox" 
            label="COM_VIRTUALCURRENCY_WEBSITE"
            description="COM_VIRTUALCURRENCY_WEBSITE_DESC"
            size="60"
        />
        
        <field name="service_url" type="text" class="inputbox" 
            label="COM_VIRTUALCURRENCY_SERVICE_URL"
            description="COM_VIRTUALCURRENCY_SERVICE_URL_DESC"
            size="60" 
        />
        
        <field name="note" type="textarea" class="inputbox" 
            label="COM_VIRTUALCURRENCY_NOTE"
            description="COM_VIRTUALCURRENCY_PARTNER_NOTE_DESC"
            filter="trim"
            rows="5"
            cols="30"
        />
        
		<field name="published" type="list" class="inputbox" 
		    label="JSTATUS" 
            description="JFIELD_PUBLISHED_DESC" 
            size="1" 
            filter="int" 
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
		
		<field name="id" type="text" class="readonly"
		  label="JGLOBAL_FIELD_ID_LABEL"
		  description="JGLOBAL_FIELD_ID_DESC" 
          readonly="true" 
          default="0" 
        />
            
	</fieldset>
</form>